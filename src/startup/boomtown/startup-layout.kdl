// src/startup/boomtown/startup-layout.kdl
// Fallback layout for Startup dashboard - CTO tab only
// Note: CLI commands generate layouts dynamically with actual Claude commands.
// This static layout is used only as a template/fallback.

layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        children
        pane size=2 borderless=true {
            plugin location="zellij:status-bar"
        }
    }

    // CTO Tab - awaiting Claude command injection
    // In production, layouts are generated dynamically by CLI commands
    tab name="CTO" focus=true {
        pane name="CTO" {
            command "bash"
            args "-c" "echo 'Startup Office - Use startup enter to launch CTO session'; read -p 'Press Enter to exit...'"
        }
    }
}
